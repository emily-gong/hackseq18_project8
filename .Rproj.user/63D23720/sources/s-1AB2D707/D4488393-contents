set
.seed( 123 )
x =
  1 : 100
y
1 =
  2
*
  x + rnorm ( 100 )
y
2 = -
  2
*
  x + rnorm ( 100 )
plot
_ly
(
  x =
    x ,
  y =
    y
  1 ,
  type = ‘scatter’ ) %>%
  add
_trace
(
  x =
    x ,
  y =
    y
  2 ) %>%
  layout
(
  legend =
    list(
      x = 0.5 ,
      y =
        1 ,
      bgcolor = ‘#F3F3F3’ ))